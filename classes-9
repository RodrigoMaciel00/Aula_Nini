class Triangulo:
    def __init__(self, lado1, lado2, lado3):
        self.lado1 = lado1
        self.lado2 = lado2
        self.lado3 = lado3
    
    def calcular_perimetro(self):
        return self.lado1 + self.lado2 + self.lado3

# Exemplo de uso:
triangulo = Triangulo(3, 4, 5)
print("Perímetro do triângulo:", triangulo.calcular_perimetro())